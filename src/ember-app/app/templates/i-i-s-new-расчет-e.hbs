<h3 class="ui header">{{t "forms.i-i-s-new-расчет-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iDрасчета
      class=(if (v-get validationModel "iDрасчета" "isInvalid") "error")
      label=(t "forms.i-i-s-new-расчет-e.iDрасчета-caption")
      data-test-i-i-s-new-расчет-e-iDрасчета=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iDрасчета" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iDорганизации
      class=(if (v-get validationModel "iDорганизации" "isInvalid") "error")
      label=(t "forms.i-i-s-new-расчет-e.iDорганизации-caption")
      data-test-i-i-s-new-расчет-e-iDорганизации=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iDорганизации" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iDсотрудника
      class=(if (v-get validationModel "iDсотрудника" "isInvalid") "error")
      label=(t "forms.i-i-s-new-расчет-e.iDсотрудника-caption")
      data-test-i-i-s-new-расчет-e-iDсотрудника=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iDсотрудника" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.период_болезни
      class=(if (v-get validationModel "период_болезни" "isInvalid") "error")
      label=(t "forms.i-i-s-new-расчет-e.период_болезни-caption")
      data-test-i-i-s-new-расчет-e-период_болезни=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "период_болезни" "message")}}
  </div>
</form>
